<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
    <shape android:shape="rectangle" >
        <size android:width="110px"/>
        <stroke android:width="1dip" android:color="#40caff" />
        <gradient android:type="radial"
                 android:gradientRadius="80"
                 android:startColor="#40caf0"
                 android:endColor="#045268"  />            
     </shape>
 </item>
<item android:state_enabled="false"> 
    <shape android:shape="rectangle" >
        <size android:width="110px"/>
        <stroke android:width="1dip" android:color="#40caff" />
       <gradient android:type="radial"
                 android:gradientRadius="80"
                 android:startColor="#121212"
                 android:endColor="#041212"  />               
     </shape>
 </item>
<item android:state_enabled="true">
    <shape android:shape="rectangle" >
        <size android:width="110px"/>
        <stroke android:width="1dip" android:color="#40caff" />
       <gradient android:type="radial"
                 android:gradientRadius="80"
                 android:startColor="#045268"
                 android:endColor="#40caf0"  />               
     </shape>
 </item>
</selector>